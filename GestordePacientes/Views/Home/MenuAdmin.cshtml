@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Gestor de Pacientes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #3c5077;
            margin: 0;
        }
        .Admin-screen {
            background-color: #fff;
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .Admin-screen h1 {
            margin-bottom: 20px;
        }
        .Admin-screen button {
            display: block;
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            transition: background-color 0.3s;
        }
        .Admin-screen button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="Admin-screen">
        <h1>Sistem Gestor de Pacientes</h1>
        <button onclick="UserManage()">Mantenimiento de Usuarios</button>
        <button onclick="DoctorsManage()">Mantenimiento de Médicos</button>
        <button onclick="LabtestsManage()">Mantenimiento de Pruebas de Laboratorio</button>
    </div>

    <script>
        function UserManage() {
            window.location.href ='@Url.Action("Usuarios", "Home")';
        }
        function DoctorsManage() {
            window.location.href = '@Url.Action("Medicos", "Home")';
        }
        function LabtestsManage() {
            window.location.href = '@Url.Action("PruebasLaboratorio", "Home")';
        }
    </script>
</body>
</html>